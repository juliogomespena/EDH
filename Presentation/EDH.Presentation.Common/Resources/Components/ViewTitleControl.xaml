<UserControl x:Class="EDH.Presentation.Common.Resources.Components.ViewTitleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EDH.Presentation.Common.Resources.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="ViewTitleRoot">
	<StackPanel>
		<TextBlock 
			Style="{DynamicResource ViewTitle}" 
			Text="{Binding TitleText, ElementName=ViewTitleRoot}" />

		<Border 
			Height="1" 
			Background="White" 
			CornerRadius="4" 
			Margin="0,5,0,0"/>
	</StackPanel>
</UserControl>
