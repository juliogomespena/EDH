<Window x:Class="EDH.Shell.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDH.Shell.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="Entrepreneur Digital Hub"
        WindowState="Maximized"
        MinWidth="800"
        MinHeight="600"
        Style="{StaticResource MaterialDesignWindow}">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="70px"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- MainWindowHeader and MainWindowContent -->
		<ContentControl Grid.Row="0" prism:RegionManager.RegionName="MainWindowHeader"/>
		<ContentControl Grid.Row="1" prism:RegionManager.RegionName="MainWindowContent"/>

		<!-- Overlaid Menu -->
		<ContentControl Grid.Row="0" Grid.RowSpan="2"
		                Panel.ZIndex="10"
		                HorizontalAlignment="Left"
		                prism:RegionManager.RegionName="MainWindowMenu"/>

		<materialDesign:PackIcon Grid.Row="1" Kind="Tag" Width="100px" Height="100px"/>
	</Grid>

</Window>
