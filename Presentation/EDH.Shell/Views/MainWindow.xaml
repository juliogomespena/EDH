<Window x:Class="EDH.Shell.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDH.Shell.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="Entrepreneur Digital Hub"
        WindowState="Maximized"
        MinWidth="800"
        MinHeight="600"
        Style="{StaticResource MaterialDesignWindow}">

	<StackPanel>
		<Grid>
            <Grid.RowDefinitions>
				<RowDefinition Height="70px"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<ContentControl Grid.Row="0" prism:RegionManager.RegionName="MainWindowHeader"/>
			<ContentControl Grid.Row="1" prism:RegionManager.RegionName="MainWindowContent"/>
		</Grid>
	</StackPanel>
</Window>
