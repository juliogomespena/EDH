<UserControl x:Class="EDH.Sales.Presentation.Views.RecordSaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EDH.Sales.Presentation.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:components="clr-namespace:EDH.Presentation.Common.Resources.Components;assembly=EDH.Presentation.Common"
             xmlns:validationRules="clr-namespace:EDH.Presentation.Common.Resources.ValidationRules;assembly=EDH.Presentation.Common"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="600">
    <Grid Style="{StaticResource ModuleViewHolder}">
        <StackPanel Style="{StaticResource ModuleViewContentHolder}">

            <components:ViewTitleControl TitleText="RECORD SALE" />

            <!--Sale line-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!-- Titles -->
                <TextBlock Grid.Column="0" Grid.Row="0" Style="{DynamicResource ViewLabel}"
                           Text="Item" />
                <TextBlock Grid.Column="1" Grid.Row="0" Style="{DynamicResource ViewLabel}"
                           Text="Quantity" />
                <TextBlock Grid.Column="2" Grid.Row="0" Style="{DynamicResource ViewLabel}"
                           Text="Adjustment" />

                <!-- Fields -->
                <ComboBox Grid.Column="0" Grid.Row="1" Style="{DynamicResource DefaultComboBox}"
                          ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedItem}"
                          Text="{Binding ItemName, UpdateSourceTrigger=PropertyChanged, Delay=600}"
                          IsDropDownOpen="{Binding IsItemsDropdownOpen}"
                          DisplayMemberPath="Name"
                          materialDesign:ComboBoxAssist.MaxLength="100"
                          materialDesign:HintAssist.Hint="Type to search"
                          materialDesign:HintAssist.HelperText="(Required)"
                          Margin="0 10 10 0" />

                <TextBox Grid.Column="1" Grid.Row="1"
                         VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Amount"
                         materialDesign:HintAssist.HelperText="(Required)"
                         Style="{DynamicResource DefaultTextBox}"
                         Margin="0 10 10 0">
                    <TextBox.Text>
                        <Binding Path="ItemQuantity" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validationRules:RegexValidationRule
                                    Pattern="^([1-9][0-9]*|0[1-9][0-9]*)$"
                                    ErrorMessage="Only whole positive numeric values allowed"
                                    AllowEmpty="False" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <Grid Grid.Column="2" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="65" />
                    </Grid.ColumnDefinitions>

                    <TextBox VerticalAlignment="Top"
                             materialDesign:HintAssist.Hint="Value"
                             materialDesign:HintAssist.HelperText="(Optional)"
                             Style="{DynamicResource DefaultTextBox}"
                             Margin="0 10 10 0">
                        <TextBox.Text>
                            <Binding Path="ItemDiscountOrSurcharge" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validationRules:RegexValidationRule
                                        Pattern="^-?[0-9]*([.,][0-9]*)?$"
                                        ErrorMessage="Only numeric values allowed"
                                        AllowEmpty="True" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <ComboBox Grid.Column="1" Style="{DynamicResource DefaultComboBox}"
                              ItemsSource="{Binding DiscountSurchargeMode}"
                              SelectedItem="{Binding SelectedDiscountSurchargeMode}"
                              IsEditable="False"
                              Margin="0 10 0 0" />
                </Grid>

            </Grid>

            <!--Line subtotals-->
            <Grid Margin="0 40 0 0" HorizontalAlignment="Stretch"
                  Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=StackPanel}}">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Separator Grid.Row="0" />
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <!-- Variable costs -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Style="{StaticResource ViewTitle}"
                                           FontSize="23"
                                           Text="COSTS"
                                           VerticalAlignment="Center" />
                                <materialDesign:PackIcon Kind="SwapVertical" Width="25"
                                                         Height="25"
                                                         Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                         VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource ViewTitle}"
                                       FontSize="20"
                                       Text="{Binding VariableCostsLineSum}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />

                            <!-- Profit -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Style="{StaticResource ViewTitle}"
                                           FontSize="23"
                                           Text="PROFIT"
                                           VerticalAlignment="Center" />
                                <materialDesign:PackIcon Kind="ChartFinance" Width="25"
                                                         Height="25"
                                                         Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                         VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource ViewTitle}"
                                       FontSize="20"
                                       Text="{Binding Profit}"
                                       Foreground="{Binding ProfitValue,
                                      Converter={StaticResource NumberToBrushConverter}}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />

                            <!-- Subtotal -->
                            <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Style="{StaticResource ViewTitle}"
                                           FontSize="23"
                                           Text="SUBTOTAL"
                                           VerticalAlignment="Center" />
                                <materialDesign:PackIcon Kind="CurrencyUsd" Width="25"
                                                         Height="25"
                                                         Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                         VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBlock Grid.Row="1" Grid.Column="4" Style="{StaticResource ViewTitle}"
                                       FontSize="20"
                                       Text="{Binding SubTotal}"
                                       Foreground="{Binding ProfitValue,
                                      Converter={StaticResource NumberToBrushConverter}}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Grid>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Style="{StaticResource DefaultButton}"
                            materialDesign:ElevationAssist.Elevation="Dp5"
                            Width="50" Height="50"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0 0 10 0">
                        <materialDesign:PackIcon Kind="CartAdd"
                                                 Width="30"
                                                 Height="30"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                    </Button>
                </Grid>

                <Separator Grid.Row="2" />
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>